#!/usr/bin/env bash

COMMIT="$(git rev-parse --abbrev-ref HEAD)-$(gitver)"
TIMESTAMP=$(date +%FT%T)


get() {
  go get -t -v  
}

build() {
  get
  go vet
	go build -ldflags "-X main.build=${TIMESTAMP}-${COMMIT}" -o server .
}

test() {
  build
  # shellcheck disable=SC2046
  go test -parallel 8 -count=1 -cover $(go list ./... | grep -v /interactivebrokers)
}

test-all() {
  build 
  go test -parallel 8 -count=1 -cover ./...
}

build-gotaset() {
  go vet
  rm -rf gotaset/bin
	GOOS=linux GOARCH=amd64 go build -ldflags "-X main.build=${TIMESTAMP}-${COMMIT}" -o gotaset/bin/gotaset_linux_amd64 gotaset/main.go
	GOOS=linux GOARCH=arm64 go build -ldflags "-X main.build=${TIMESTAMP}-${COMMIT}" -o gotaset/bin/gotaset_linux_arm64 gotaset/main.go
	GOOS=darwin GOARCH=arm64 go build -ldflags "-X main.build=${TIMESTAMP}-${COMMIT}" -o gotaset/bin/gotaset_darwin_arm64 gotaset/main.go
	GOOS=darwin GOARCH=amd64 go build -ldflags "-X main.build=${TIMESTAMP}-${COMMIT}" -o gotaset/bin/gotaset_darwin_amd64 gotaset/main.go

  docker buildx build -t totomz84/gotaset:${COMMIT} gotaset/
  docker push totomz84/gotaset:${COMMIT}
}

